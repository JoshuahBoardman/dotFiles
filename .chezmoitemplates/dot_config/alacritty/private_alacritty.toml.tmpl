
[env]
TERM = "xterm-256color"

[window]
padding = { x = 10, y = 10}
dynamic_padding = true
decorations = "Transparent" # Linux: None | Mac: Transparent
opacity = 0.95
blur = true
# Options: "Maximized", "Fullscreen", "SimpleFullscreen"
startup_mode = "Maximized" 
dynamic_title = true

[font]
size = 15.5

[general]
import = [
  "~/.config/alacritty/material-gruvbox.toml",
]
